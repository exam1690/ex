
package practical3;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.firefox.FirefoxOptions;

public class prac3 {

    public static WebDriver driver;
    static String driverPath = "C:\\Users\\Deepak\\Documents\\STQA\\geckodriver-v0.35.0-win-64\\geckodriver.exe";

    public static void main(String[] args) {
        System.out.println("Starting Selenium demo...");

       
        System.setProperty("webdriver.gecko.driver", "C:\\Users\\Deepak\\Documents\\STQA\\geckodriver-v0.35.0-win-64\\geckodriver.exe");
     FirefoxOptions options=new FirefoxOptions();
     driver=new FirefoxOptions(options);

        try {
            driver.get("https://www.facebook.com/");

            // Maximize the browser window
            driver.manage().window().maximize();

            // Perform any additional actions if needed

        } catch (Exception ex) {
            System.out.println("An error occurred: " + ex.toString());
        } finally {
            // Quit the driver to close all browser windows and end the session
            if (driver != null) {
                driver.quit();
            }
        }
    }
}
