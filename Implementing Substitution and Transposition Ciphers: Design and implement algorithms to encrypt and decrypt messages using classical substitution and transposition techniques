# Caesar Cipher
def caesar_cipher(text, shift, mode):
  result = ""

  if mode == 'decrypt':
    shift = -shift # Reverse the shift for decryption
  
  for char in text:
    if 'a' <= char <='z': # Lowercase letters
      start = ord('a')
      new_position = (ord(char) - start + shift) % 26
      result += chr(start + new_position)
    elif 'A' <= char <= 'Z': # Uppercase letters
      start = ord('A')
      new_position = (ord(char) - start + shift) % 26
      result += chr(start + new_position)
    else:
      result += char #Keep non-alphabetic characters as they are
  return result

# Example Usage:
message = "Hello, World!"
shift_amount = 3

# Encrypt
encrypted_text = caesar_cipher(message, shift_amount, 'encrypt')
print(f"Original: {message}")
print(f"Encrypted: {encrypted_text}")

# Decrypt
decrypted_text = caesar_cipher(encrypted_text, shift_amount, 'decrypt')
print(f"Decrypted: {decrypted_text}")
